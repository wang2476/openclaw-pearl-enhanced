{
  "name": "openclaw-pearl",
  "version": "0.1.0",
  "description": "Memory layer and intelligent model router for OpenClaw",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pearl": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "openclaw",
    "llm",
    "memory",
    "routing",
    "ai",
    "agent"
