  "author": "Sam Hotchkiss",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/samhotchkiss/openclaw-pearl"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "fastify": "^5.0.0",
    "uuidv7": "^1.0.0",
    "yaml": "^2.4.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "vitest": "^3.0.0"
  }
